@model LibraryASP.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>checkIn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>

    <div class="container mt-5 pt-5 center-div">
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card">
                <div class="card-header">
                    Registrate
                </div>
                <div class="card-body">
                    <form asp-controller="Inicio" asp-action="checkIn" method="post">
                        <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="Nombre" required />
                        <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="Email" required />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Passwd" required/>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrate</button>
                        </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }
                        ¿Ya tienes una cuenta? <a href="@Url.Action("logIn","Inicio")">Iniciar sesión!</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
